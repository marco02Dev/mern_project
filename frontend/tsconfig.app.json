{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types", 
      "../node_modules/@types", 
      "../../node_modules/@types",
      "./types"
    ],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Alias support */
    "baseUrl": ".", 
    "paths": {
      "@shared/*": ["shared/*"],
      "@client/*": ["client/src/*"],
      "@admin/*": ["admin/src/*"],
      "@user/*": ["user/src/*"],
    }
  },
  "include": ["user", "admin", "client", "shared", "vite-env.d.ts"]
}
  
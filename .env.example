# Environment settings (Set automatically by package.json scripts depending on the environment)
NODE_ENV=development

# Database connection string
DATABASE_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# Secret key for session management
SECRET=<your_secret_key>

# Authorized IP address for security
AUTHORIZED_IP=<your_ip_address>

# Frontend development URL
FRONT_END_DEV_URI=http://localhost:4000

# Server port
PORT=8000

# Email transporter configuration
TRANSPORTER_SERVICE=gmail
TRANSPORTER_USER=<your_email>
TRANSPORTER_PASSWORD=<your_email_password>
